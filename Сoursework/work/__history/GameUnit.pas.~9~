Unit GameUnit;

Interface

Uses
    Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
    System.Classes, Vcl.Graphics,
    Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Vcl.Imaging.pngimage,
    Vcl.Imaging.jpeg, Vcl.StdCtrls, MenuUnit;

Type
    TGameForm = Class(TForm)
        BackgroundImage: TImage;
        GameFieldImage: TImage;
        SettingsImage: TImage;
    Label1: TLabel;
    Label2: TLabel;
        Procedure GameFormCreate(Sender: TObject);
    procedure GameFormCanResize(Sender: TObject; var NewWidth,
      NewHeight: Integer; var Resize: Boolean);
    procedure SettingsImageClick(Sender: TObject);
    Private
        { Private declarations }
    Public
        { Public declarations }
    End;

Var
    GameForm: TGameForm;

Implementation

{$R *.dfm}

procedure TGameForm.GameFormCanResize(Sender: TObject; var NewWidth,
  NewHeight: Integer; var Resize: Boolean);
begin
    SettingsImage.Left := 20;
    SettingsImage.Top := 20;

    GameFieldImage.Left := (ClientWidth - GameFieldImage.Width) Div 2;
    GameFieldImage.Top := (ClientHeight - GameFieldImage.Height) Div 2;
end;

Procedure TGameForm.GameFormCreate(Sender: TObject);
Begin
    GameFieldImage.Width := 800;
    GameFieldImage.Height := 800;
End;

procedure TGameForm.SettingsImageClick(Sender: TObject);
begin
    MenuForm.Icon := MenuForm.Icon;
    If MenuForm.WindowState = wsMaximized Then
        MenuForm.WindowState := wsMaximized;
    MenuForm.Width := MenuForm.Width;
    MenuForm.Height := MenuForm.Height;
    MenuForm.ShowModal;
    MenuForm.Free;
end;

End.
