Program Project3;

Uses
  System.SysUtils;

Const
    MIN = 0;
Var
    EPS, X, Num, Sin: Real;
    I, J, N: Integer;
    IsIncorrect: Boolean;

Begin
    EPS := 0;
    X := 0;
    Writeln('Данная программа считает значение функции f(x) = sin^2(x) для введённого значения X, а также подсчитывает количество чисел из ряда Маклорена больших EPS.');
    Writeln;

    IsIncorrect := True;
    While (IsIncorrect) Do
    Begin
        Write('Введите EPS (значение должно быть больше нуля): ');
        Try
            Readln(EPS);
            IsIncorrect := False;
        Except
            Writeln('Проверьте корректность ввода данных!');
        End;
        If (not IsIncorrect and (EPS <= MIN)) Then
        Begin
            Writeln('EPS должен быть больше нуля!');
            IsIncorrect := True;    
        End;
    End;
    IsIncorrect := True;
    While (IsIncorrect) Do
    Write('Введите X: ');
    Begin
        Try
            Readln(X);
            IsIncorrect := False;
        Except
            Writeln('Проверьте корректность ввода данных!');
        End;
    End;

    Sin := 0;
    N := 1;
    Num := 1;

    J := 1;
    While (J = 1) Do
    Begin
        For I := 1 To N - 1 Do
            Num := Num * (-1);
        For I := 1 To 2 * N - 1 Do
            Num := Num * 2;
        For I := 1 To 2 * N Do
            Num := Num * X;
        For I := 1 To 2 * N Do
            Num := Num / I;

        If (Num < 0) Then
        Begin
            If (-Num < EPS) Then
                J := 0;
        End
        Else
        Begin
            If (Num < EPS) Then
                J := 0;
        End;

        If (J = 1) Then
        Begin
            Sin := Sin + Num;
            Num := 1;
            N := N + 1;
        End;
    End;

    Writeln('Sin: ', Sin, '; N: ', N);

    Readln;
End.
