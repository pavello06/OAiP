Program Task1;

Uses
    System.SysUtils;

Const
    MIN_R = 1;
    MIN_XY = -32768;
    MAX_XY = 32768;
    MAX_R = 2147483647;
Var
    R, X, Y: Real;
    OnCircle: Char;
    IsIncorrect: Boolean;

Begin
    R := 0;
    X := 0;
    Y := 0;
    Writeln('Данная программа проверяет, находится ли точка с координатами (X; Y) на окружности радиусом R с центром в начале координат.');
    Writeln;

    IsIncorrect := True;
    While (IsIncorrect) Do
    Begin
        Write('Введите радиус окружности R[1; 2147483647]: ');
        Try
            Readln(R);
            IsIncorrect := False;
        Except
            Writeln('Проверьте корректность ввода данных!');
        End;
        If (Not IsIncorrect And ((R < MIN_R) Or (R > MAX_R))) Then
        Begin
            Writeln('Значение не попадает в диапазон!');
            IsIncorrect := True;
        End;
    End;
    IsIncorrect := True;
    While (IsIncorrect) Do
    Begin
        Write('Введите координату X[-32768; 32768] точки: ');
        Try
            Readln(X);
            IsIncorrect := False;
        Except
            Writeln('Проверьте корректность ввода данных!');
        End;
        If (Not IsIncorrect And ((X < MIN_XY) Or (X > MAX_XY))) Then
        Begin
            Writeln('Значение не попадает в диапазон!');
            IsIncorrect := True;
        End;
    End;
    IsIncorrect := True;
    While (IsIncorrect) Do
    Begin
        Write('Введите координату Y[-32768; 32768] точки: ');
        Try
            Readln(Y);
            IsIncorrect := False;
        Except
            Writeln('Проверьте корректность ввода данных!');
        End;
        If (Not IsIncorrect And ((Y < MIN_XY) Or (Y > MAX_XY))) Then
        Begin
            Writeln('Значение не попадает в диапазон!');
            IsIncorrect := True;
        End;
    End;

    R := Round(R * 1000) Div 1000;
    X := Round(X * 1000) Div 1000;
    Y := Round(Y * 1000) Div 1000;

    If (R = Sqrt(X * X + Y * Y)) Then
    Begin
        Writeln('Точка принадлежит окружности');
        OnCircle := 'T';
    End
    Else
    Begin
        Writeln('Точка не принадлежит окружности');
        OnCircle := 'F';
    End;

    Readln;
End.
