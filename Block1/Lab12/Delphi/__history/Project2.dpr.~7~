Program Project2;

Uses
    System.SysUtils;

Const
    MIN = 0;
Var
    Check: String;
    N, I, Value1, Value2: Integer;
    IsIncorrect: Boolean;

Begin
    N := 0;
    Writeln('Данная программа проверяет, работает ли формула 1 + 2 + ... + N = N * (N + 1) / 2.');
    Writeln;

    IsIncorrect := True;
    While(IsIncorrect) Do
    Write('Введите натуральное число N для проверки: ');
    Begin
        Try
            Readln(N);
            If (N > MIN) Then
            Begin
                IsIncorrect := False;
            End
            Else
            Begin
                Writeln('Проверьте корректность ввода данных!');
            End;
        Except
            Writeln('Проверьте корректность ввода данных!');
        End;
    End;

    Value1 := 0;
    For I := 1 To N Do
         Value1 := Value1 + I;

    Value2 := N * (N + 1) Div 2;

    If (Value1 = Value2) Then
    Begin
        Writeln('Формула работает!');
    End
    Else
    Begin
        Writeln('Формула не работает!');
    End;

    Readln;
End.
